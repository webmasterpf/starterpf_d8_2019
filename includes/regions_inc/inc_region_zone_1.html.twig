{% set region_attribute = create_attribute() %}
{% set noderegion_classes = [
'uneclasse',
'type-' ~ node.bundle|clean_class
]
%}


{% if  region_Zone_1 is not empty %}
    <div {{ region_attribute.addClass(noderegion_classes).setAttribute('id', 'region-zone-1') }}>
        {{ region_Zone_1 }}
    </div> <!-- /#region-zone_1 -->
{% endif %}

