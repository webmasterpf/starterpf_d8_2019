{% set main_menu = page.primary_menu|render %}
{% set secondary_menu = page.secondary_menu|render %}
<div{{ attributes.addClass(
  'layout-container',
  main_menu or secondary_menu ? 'with-navigation',
  secondary_menu ? 'with-subnav'
) }}>

  <!-- ______________________ HEADER _______________________ -->
{# Inclusion du markup du Header pour plus de lisibilité #}

{% include directory ~ '/templates/includes/inc_header.html.twig' %}   
  

  {% if main_menu or secondary_menu %}
    <nav id="navigation" class="menu{% if main_menu %} with-primary{% endif %}{% if secondary_menu %} with-secondary{% endif %}">
      <div class="container">
        {{ main_menu }}
        {{ secondary_menu }}
      </div>
    </nav><!-- /#navigation -->
  {% endif %}
<!-- ______________________ CONTENT INNER GLOBAL _______________________ -->

<div class="content-inner">

    <!-- ______________________ CONTENT TOP NODE_______________________ -->
    {% if (content_top_node): %}
        <div id="content-top-node">
            {% content_top_node %}
        </div> <!-- /#content-top-node -->
    {% endif %}

    <div class="content-top">
        {{ page.breadcrumb }} 

        {% content_top %}
    </div> <!-- /#content-top -->


      {% if page.highlighted|render %}
              <div id="highlighted">{{ page.highlighted }}</div>
            {% endif %}

            {{ title_prefix }}

            {% if title %}
              <h1 class="title">{{ title }}</h1>
            {% endif %}

            {{ title_suffix }}
            {{ page.help }}

            {% if tabs %}
              <div class="tabs">{{ tabs }}</div>
            {% endif %}

            {% if action_links %}
              <ul class="action-links">{{ action_links }}</ul>
            {% endif %}

        </div> <!-- /#content-header -->
    
    <!-- ______________________ CONTENU CENTRAL _______________________ -->
    <article class="middle-content">
{{ page.content }}
    </article> <!-- /#content-area -->

    <!-- ______________________  ACCES RUBRIQUES 3 - CONTACT  _______________________ -->
{% if page.RubriquesHP3 %}
    <div class="acces_rubriques">{% RubriquesHP3 %}</div>
{% endif %} 

<!-- ______________________ ACCES LOGOS PARTENAIRES _______________________ -->
{% if page.LogoPart %}
    <div class="logo_partenaires">{% LogoPart %}</div>
{% endif %}   

<!-- ______________________ CONTENU BAS _______________________ -->

{% if page.content_bottom %}
    <div class="content-bottom">
        {% page.content_bottom %}
    </div><!-- /#content-bottom -->
{% endif %}
    
</div> <!-- /content-inner /content -->

  
        <!-- ______________________ CONTENT TOP NODE_______________________ -->
        {# Les classes et IDs de la region sont attribuées par le template de region dédié #}
        {% if page.content_top_node %} 
            {{ page.content_top_node }}
        {% endif %}
        
        <div id="content-area">
          {{ page.content }}
        </div>

        <!-- ______________________ CONTENU BAS _______________________ -->
        {# Les classes et IDs de la region sont attribuées par le template de region dédié #}
           {% if page.content_bottom %} 
            <div id="content-bottom">
	{{ page.content_bottom }}
            </div> <!-- /#content-top-node -->
      {% endif %}

      </section><!-- /#content -->
  
      
      {% if page.sidebar_first|render %}
        <aside id="sidebar-first" class="column sidebar first">
          {{ page.sidebar_first }}
        </aside><!-- /#sidebar-first -->
      {% endif %}

      {% if page.sidebar_second|render %}
        <aside id="sidebar-second" class="column sidebar second">
          {{ page.sidebar_second }}
        </aside><!-- /#sidebar-second -->
      {% endif %}
    </div><!-- /.container -->
  </div><!-- /#main -->

  <!-- ______________________ FOOTER _______________________ -->
{# Inclusion du markup du Footer pour plus de lisibilité #}

{% include directory ~ '/templates/includes/inc_footer.html.twig' %}   
  
  

</div><!-- /.layout-container -->